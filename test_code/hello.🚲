var dist_in_km = 1.6;
var dist_in_miles = 1.0;

if (dist_in_miles == dist_in_km) {
    printf("Hello, rover!\n");
} else {
    printf("Cannot happen\n");
}

var this_year = 99;
var next_year = this_year + 1;

printf("Next year is: {}\n", next_year);

var year = 90;
while (year != 0) {
    printf("{}\n", year);
    year = year + 1;
}

var arr = [1, 2, 3, 4];
arr[2] = 9;
var i = 0;
while (i < length(arr)) {
    printf("{} ", arr[i]);
    i = i + 1;
}
printf("\n");

const pi = 5.0; // for ease of calculation
